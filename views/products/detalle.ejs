<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>DETALLE</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header class="main-header">
        <%- include('../partials/header', {user: locals.user ? user : {}}) %>
    </header>
    <main>
        <section class="section-descripcion-detalle">
            <article class="contenedor-producto-detalle">
                <div class="titulo-producto-detalle">
                    <h2><%= product.title %></h2>
                    <h3><%= product.description %></h3>
                    <a class="anadir-producto-detalle"><i class="fa-regular fa-heart"></i></a>
                </div>
                <img src="/images/fotosProducto/<%= product.image%>" alt="">
                <!-- logo -->
                <div class="descripcion-producto-detalle">
                    <p>Genero: <%= product.genre %></p>
                    <p>Talla: <%= product.size %></p>
                    <p>Precio: <%= product.price %></p>
                </div>
            </article>

            <article class="article-botones-detalle">
                <form action="#" method="">
                    <button type="submit">Comprar Ahora</button>
                  </form>

                  <form action="#" method="">
                    <button type="submit">Agregar al Carrito</button>
                  </form>

                  <% if ((locals.user && user.id) === product.id_user) { %>
                    <a href="/products/<%=product.id%>/editar">Editar</a>
  
                    <form action="/products/<%= product.id%>/delete?_method=DELETE" method="POST">
                      <button type="submit">Borrar Producto</button>
                    </form>
                  <% } %>

            </article>
        </section>   

        <section class="contenedor-section-parati-detalle">
            <h2 class="subtitulos-detalle">Productos para ti</h2>
            <div class="slider-detalle">
                <img src="images/clothe6.jpg" alt="">
                <img src="images/clothe7.jpg" alt="">
                <img src="images/clothe8.jpg" alt="">
                <img src="images/clothe9.jpg" alt="">
            </div>
        </section>
    </main>
    <%- include('../partials/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>
