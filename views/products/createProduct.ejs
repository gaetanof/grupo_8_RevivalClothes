<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <title>Create Product</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <header><%- include('../partials/header.ejs', {user: locals.user ? user : {}}) %></header>

    <main class="main-create">
      <section class="section-create">
        <h1>Crear un producto</h1>
        <% if (locals.errors){ 
            errors.forEach(error => {%>
        <p class="feedback-create"><%= error.msg %></p>
        <%  })  
          }  
        %>
        <form action="/products/create" method="POST" enctype="multipart/form-data">
          <div class="field">
            <label for="titulo">Titulo</label>
            <div class="control">
              <input type="text" name="title" id="titulo" value="<%= locals.old && old.title ? old.title : '' %>" />
            </div>
            <p class="feedback"></p>
          </div>

          <div class="field">
            <label for="genero">Genero</label>
            <div class="control">
              <input type="text" name="genre" id="genero" value="<%= locals.old && old.genre ? old.genre : '' %>" />
            </div>
            <p class="feedback"></p>
          </div>

          <div class="field">
            <label for="talle">Talle</label>
            <div class="control">
              <input type="text" name="size" id="talle" value="<%= locals.old && old.size ? old.size : '' %>"/>
            </div>
            <p class="feedback"></p>
          </div>

          <div class="field">
            <label for="precio">Precio</label>
            <div class="control">
              <input type="number" name="price" id="precio" value="<%= locals.old && old.price ? old.price : '' %>" />
            </div>
            <p class="feedback"></p>
          </div>

          <div class="field">
            <label for="descripcion">Descripci√≥n</label>
            <div class="control">
              <textarea name="description" id="descripcion" value="<%= locals.old && old.description ? old.description : '' %>"></textarea>
            </div>
            <p class="feedback"></p>
          </div>

          <div class="field">
            <label for="imgFile">Imagen del producto</label>
            <div class="control">
              <input type="file" name="imgFile" id="imgFile" />
            </div>
            <p class="feedback"></p>
          </div>

          <div class="field">
            <div class="control">
              <input type="submit" value="crear producto" class="button-signin">
            </div>
          </div>
        </form>
      </section>
    </main>

    <!-- <%- include('../partials/footer.ejs') %> -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  </body>
</html>
