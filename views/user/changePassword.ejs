<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('../partials/head') %>
    <title>Change Password</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

	<header class="main-header">
        <%- include('../partials/header-users') %>
    </header>

	<main class="main-signin">
	<div class="container-signin">
		<form action="/user/<%= user.id %>/changepassword?_method=PUT" method="POST" class="form-signin">
			<div class="fullname-signin">
				<label>Contrase√±a:</label>
  				<input type="password" name="password" class="control-signin">
                  <% if (locals.errors) { %>
					<% errors.forEach(el => { %>
						<p class="msg-error-signin"><%= el.path == 'password' ? el.msg : '' %></p>
						<% }) %>
				<% } %>
			</div>
			<div class="account-signin">
				<input type="submit" value="Editar" class="button-signin">
			</div>

		</form>
	</div>
	</main>

	<footer>
	<%- include('../partials/footer.ejs') %>
    </footer>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>