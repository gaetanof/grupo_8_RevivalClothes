<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <title>User list</title>
        <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <header>
        <%- include('../partials/header-users.ejs') %>
    </header>

    <main class="main-userlist">
        <% users.forEach(el=> { %>
            <% if (!el.deletedAt) { %>
                <ul class="lista-usuarios-userlist">
                    <div class="user-userlist">
                        <li><img src="/images/fotosUsuario/<%= el.image ? el.image : 'img_default.png' %>" alt=""><a
                                href="/user/<%= el.id %>/detalle">
                                <%= el.user_name %>
                            </a></li>
                    </div>
                    <a href="/user/<%= el.id %>/edit"><button>Editar</button></a>
                    <form action="/user/<%= el.id %>/deleteAdmin?_method=DELETE" method="POST">
                        <button type="submit">Eliminar</button>
                    </form>
                    <form action="/user/<%= el.id %>/userlist?_method=PUT" method="POST">
                        <button type="submit">Hacer admin</button>
                    </form>
                    <br>
                </ul>
                <% } %>
                    <% }) %>
    </main>

    <%- include('../partials/footer.ejs') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"></script>
</body>

</html>